{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"target": "ES6",
		"module": "CommonJS",
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"]
}
